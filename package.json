{
  "name": "gad-qr-scanner",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win",
    "build": "npm run make-icon && electron-builder --win --x64 && node scripts/patch-icon.js && npm run copy-build",
    "copy-build": "node scripts/copy-build.js",
    "make-icon": "node scripts/make-ico.js"
  },
  "build": {
    "directories": {
      "buildResources": "build"
    },
    "appId": "com.gad.qrscanner",
    "productName": "GAD QR Scanner",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/qr.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/qr.ico",
      "uninstallerIcon": "build/qr.ico",
      "include": "build/installer.nsh"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": "build",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./",
        "filter": [
          "master.xlsx"
        ]
      }
    ]
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^1.0.0",
    "rcedit": "^4.0.1",
    "sharp": "^0.32.4"
  }
}
